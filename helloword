}

//using arrays

var myarray =["HTML","CSS","JS"];

//Getting values by index : starting index 0
console.log(myarray[0]);

//Getting all value using classical for
for (let i = 0; i < myarray.length; i++) {
    console.log("Line" + i + " : "
    + myarray[i]);
    
}

///Getting all value using classical foreach

myarray.forEach((item,index)=>{
    console.log("Index " + index + " value : " + item);
});

////declarartion of function : methode 2

